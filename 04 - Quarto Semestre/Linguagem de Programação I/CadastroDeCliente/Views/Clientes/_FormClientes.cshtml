@model ClienteModel;
<h2>Cadastro de Cliente</h2>
<hr>
<div class="row mt-4">
    <div class="col">
        <div class="form-group">
            <label asp-for="NomeCliente" class="form-label mb-2">Nome</label>
            <input class="form-control" asp-for="NomeCliente" placeholder="Digite o nome do cliente">
            <span class="small text-danger" asp-validation-for="NomeCliente"></span>
        </div>
    </div>
    <div class="col">
        <div class="form-group">
            <label asp-for="CPFCliente" class="form-label mb-2">CPF</label>
            <input class="form-control" asp-for="CPFCliente" placeholder="Digite o CPF do cliente">
            <span class="small text-danger" asp-validation-for="CPFCliente"></span>
        </div>
    </div>
    <div class="col">
        <div class="form-group">
            <label asp-for="EnderecoCliente" class="form-label mb-2">Endereço</label>
            <input class="form-control" asp-for="EnderecoCliente" placeholder="Digite o endereço do cliente">
            <span class="small text-danger" asp-validation-for="EnderecoCliente"></span>
        </div>
    </div>
</div>
<div class="d-grid gap-2 mt-4">
    <button class="btn btn-primary">SALVAR</button>
</div>
@if(TempData["mensagem"] != null){
    
    <div class="alert alert-primary alert-dismissible mt-4">
        @TempData["mensagem"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>

}


@if(Model.ListaClientes.Count > 0){


    <ul class="list-group mt-4">

        @foreach(var cliente in Model.ListaClientes)
        {
            <li class="list-group-item p-3 border rounded shadow-sm">
                <div class="row align-items-center">
                    <div class="col-md-4">
                        <strong>Nome:<br></strong> @cliente.Nome
                    </div>
                    <div class="col-md-3">
                        <strong>CPF:<br></strong> @cliente.CPF
                    </div>
                    <div class="col-md-5">
                        <strong>Endereço:<br></strong> @cliente.Endereco
                    </div>
                    <div class="col-md-6">
                        <div class="btn-group">
                            <a asp-action="Editar" asp-route-id="@cliente.Id" class="btn btn-sm btn-outline-primary">Editar</a>
                            <a asp-action="Excluir" asp-route-id="@cliente.Id" class="btn btn-sm btn-outline-danger">Excluir</a>
                        </div>
                    </div>
                </div>
            </li>

        }

    </ul>

}